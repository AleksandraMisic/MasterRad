<UserControl x:Class="MITM_UI.View.CustomControls.ScanForHosts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MITM_UI.View.CustomControls"
              xmlns:converters="clr-namespace:MITM_UI.View.Resources.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BoolToVisibility x:Key="BoolToVisibility"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="2">
            <Button Style="{StaticResource ButtonStyle}" Grid.Column="2" Margin="10, 10, 10, 10" Content="Start sniffing" Height="30" Width="80" HorizontalAlignment="Left" Command="{Binding SniffForHostsCommand}" IsEnabled="{Binding NotSniffing}"/>
            <ProgressBar Maximum="{Binding SniffForHostsMaxProgressValue}" Minimum="0" HorizontalAlignment="Left" Visibility="{Binding NotSniffing, Converter={StaticResource BoolToVisibility}}" Value="{Binding SniffForHostsCurrentProgress}" Height="20" Width="150" Margin="110, 0, 0, 0">
            </ProgressBar>
        </Grid>
        <Grid Grid.Row="0">
            <TextBlock Text="Hosts on local network:" Foreground="Black" Margin="10, 10, 10, 10"/>
        </Grid>
        <DataGrid Grid.Row="1" Background="{StaticResource DarkColor}" ItemsSource="{Binding HostsList}" Margin="10, 0, 10, 0" MinHeight="200" Style="{StaticResource DataGridStyle}" RowStyle="{StaticResource ResourceKey=DataGridRow}" ColumnHeaderStyle="{StaticResource ResourceKey=DataGridColumnHeader}" CellStyle="{StaticResource ResourceKey=DataGridCell}" Name="MainDataGrid" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" CanUserResizeRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="IP Address" Binding="{Binding IPAddressString}" TextBlock.TextAlignment="Center"/>
                <DataGridTextColumn Header="MAC Address" Binding="{Binding MACAddressString}" TextBlock.TextAlignment="Center"/>
                <DataGridTemplateColumn Header="Target1">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource ButtonStyle}" 
                                    Grid.Column="2" Margin="10, 2, 10, 2" Content="Target1" HorizontalAlignment="Center" IsEnabled="{Binding  DataContext.NotAttack, 
                                                    RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                    Command="{Binding DataContext.SetTarget1Command, 
                                                    RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                            CommandParameter="{Binding IPAddressString}">
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Target2">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource ButtonStyle}" 
                                    Grid.Column="2" Margin="10, 2, 10, 2" Content="Target2" HorizontalAlignment="Center" IsEnabled="{Binding  DataContext.NotAttack, 
                                                    RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                    Command="{Binding DataContext.SetTarget2Command, 
                                                    RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                            CommandParameter="{Binding IPAddressString}">
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
